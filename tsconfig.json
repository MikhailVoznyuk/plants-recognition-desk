{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "module": "node16",
    "lib": ["dom", "es2022"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["src/renderer/pages/*"],
      "@components/*": ["src/renderer/components/*"],
      "@ui/*": ["src/renderer/ui/*"],
      "@lib/*": ["src/renderer/lib/*"],
      "@types/*": ["src/types/*"],
      "@assets/*": ["assets/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src", ".erb"],
  "exclude": ["test", "release/build", "release/app/dist", ".erb/dll"],

}
